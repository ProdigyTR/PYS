@model PerformansYonetimSistemi.ViewModels.MainViewModel
@{
    ViewData["Title"] = "Departman";
}
<div class="col-sm-6">
    <form asp-controller="Department" asp-action="Create" method="post" class="card mb-1">
        <div class="card-body">
            <div class="col-sm-12 d-flex justify-content-between">
                <div class="col-sm-6 d-flex">
                    <div class="col-sm-4 me-1">
                        <input class="form-control form-control-sm fs--2 text-center" type="text" placeholder="Kod" name="Code">
                    </div>
                    <div class="col-sm-8">
                        <input class="form-control form-control-sm fs--2 text-center" type="text" placeholder="Açıklama" name="Name">
                    </div>
                </div>
                <div class="col-sm-2">
                    <button class="btn btn-sm btn-outline-success w-100 h-100" type="submit">
                        <span class="fa fa-plus"></span> EKLE
                    </button>
                </div>
            </div>
        </div>
    </form>
    <div class="card">
        <div class="card-body">
            <table class="table table-sm table-bordered table-striped fs--2">
                <thead>
                    <tr>
                        <th class="text-center">Kod</th>
                        <th class="text-center">Açıklama</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Departments)
                    {
                        <tr>
                            <td class="text-center align-middle">@item.Code</td>
                            <td class="text-center align-middle">@item.Name</td>
                            <td class="text-center align-middle">
                                <form asp-controller="Department" asp-action="Delete" method="post">
                                <button class="btn btn-sm btn-outline-danger fs--2" value="@item.Code" name="Code">
                                    <span class="far fa-trash-alt"></span>
                                </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>