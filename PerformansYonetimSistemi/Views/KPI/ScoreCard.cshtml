@model PerformansYonetimSistemi.ViewModels.MainViewModel
@{
    ViewData["Title"] = "KPI Skor Kartları";
}
<style>
    .pointer {
        cursor: pointer;
    }
</style>
@foreach (var item in Model.Employees)
{
    int sira = 1;
    <div class="card mb-1">
        <div class="card-body">
            <div class="col-sm-12 d-flex">
                <div class="col-sm-3">
                    <img class="rounded-circle img-thumbnail shadow-sm" src="/img/employee/@(item.TC).jpg" width="200">
                    <div class="col-sm-12">
                        <h4 class="mb-1">@item.Name @item.LastName</h4>
                        <h5 class="fs-9 fw-normal">@Model.Positions.Where(w => w.Code == item.Position).Select(s => s.Name).FirstOrDefault()</h5>
                        <p class="text-500">@Model.Departments.Where(w => w.Code == item.Department).Select(s => s.Name).FirstOrDefault()</p>
                    </div>
                </div>
                @foreach(var ek in Model.EmployeeKpis.Where(w=>w.TC==item.TC))
                {
                    
                    <div class="card col-sm-9">
                        <div class="card-header bg-soft-secondary">
                            <span class="badge bg-info">#@sira</span>
                        </div>
                        <div class="card-body bg-soft-info">
                            <div class="row justify-content-around">
                                @foreach (var ksc in Model.KpiScoreCards.Where(w =>w.KpiId==ek.Id).OrderBy(o => o.Id))
                                {
                                    <div class="card col-sm-5 mb-1">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">
                                                <label>@Model.KPIs.Where(w => w.Code == Model.Targets.Where(w => w.Id ==ksc.Target).Select(s => s.Name).FirstOrDefault()).Select(s=>s.Name).FirstOrDefault()</label>
                                                <span class="badge rounded-pill badge-soft-primary pt-2 pointer" data-bs-toggle="modal" data-bs-target="#ratioModal" onclick="setIdRatio(@ksc.Id)">@(ksc.Ratio)%</span>
                                            </div>
                                            <label class="form-label form-label-sm fs--2 text-400">@Model.Targets.Where(w => w.Id == ksc.Target).Select(s => s.Explanation).FirstOrDefault()</label>
                                            <div class="col-sm-12 d-flex">
                                                <div class="progress mb-3 w-100" style="height:31px" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                                    <button class="btn btn-sm btn-outline-info fs--2 me-2" data-bs-toggle="modal" data-bs-target="#progressModal" onclick="setIdProgress(@ksc.Id)"><span class="far fa-edit"></span></button>
                                                    <div class="progress-bar" style="width: @(ksc.Progress)%">@(ksc.Progress)%</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    sira++;
                }
               
            </div>
        </div>
    </div>
}
<div class="modal fade" id="progressModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 500px">
        <form asp-asp-controller="KPI" asp-action="UpdateProgress" method="post" class="modal-content position-relative">
            <div class="modal-body p-0">
                <div class="p-4 pb-0">
                    <div class="mb-3">
                        <label class="col-form-label" for="recipient-name">İlerleme Oranı Giriniz</label>
                        <input class="form-control" type="number" value="" name="Progress" />
                        <input class="d-none" name="Id" Id="IdProgress" value="" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="submit">Güncelle</button>
            </div>
        </form>
    </div>
</div>
<div class="modal fade" id="ratioModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 500px">
        <form asp-asp-controller="KPI" asp-action="UpdateRatio" method="post" class="modal-content position-relative">
            <div class="modal-body p-0">
                <div class="p-4 pb-0">
                    <div class="mb-3">
                        <label class="col-form-label" for="recipient-name">Ağırlık Oranı Giriniz</label>
                        <input class="form-control" type="number" value="" name="Ratio" />
                        <input class="d-none" name="Id" Id="IdRatio" value="" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="submit">Güncelle</button>
            </div>
        </form>
    </div>
</div>
<script>
    function setIdProgress(p) {
        document.getElementById("IdProgress").value = p;
    };
    function setIdRatio(p) {
        document.getElementById("IdRatio").value = p;
    };
</script>