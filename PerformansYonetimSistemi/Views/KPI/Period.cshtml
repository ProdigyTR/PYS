@model PerformansYonetimSistemi.ViewModels.MainViewModel
@{
    ViewData["title"] = "Performans Kart Seçimi";
}
<div class="card mb-1">
    <div class="card-header">
        <h4 class="text-primary">KPI Kartları</h4>
    </div>
    <div class="card-body">
        <div class="col-sm-12 d-flex">
            <table class="table table-sm table-bordered">
                <thead class="bg-soft-warning">
                    <tr>
                        <th class="text-center">Başlama Tarihi</th>
                        <th class="text-center">Bitiş Tarihi</th>
                        <th class="text-center">Oluşturan</th>
                        <th class="text-center">Oluşturma Tarihi</th>
                        <th class="text-center">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TargetPeriods.OrderBy(o => o.StartDate))
                    {
                        <tr>
                            <td class="text-center align-middle">@item.StartDate.ToString("dd.MM.yyyy")</td>
                            <td class="text-center align-middle">@item.EndDate.ToString("dd.MM.yyyy")</td>
                            <td class="text-center align-middle">@item.CreatedBy</td>
                            <td class="text-center align-middle">@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="text-center align-middle">
                                <form asp-controller="KPI" asp-action="ScoreCard" method="get">
                                    <button class="btn btn-sm btn-outline-primary me-2" name="Id" value="@item.Id">
                                        <span class="fas fa-expand-alt"></span>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        @foreach (var target in Model.Targets.Where(w => w.TargetPeriodId == item.Id))
                        {
                            <tr class="bg-soft-info">
                                <td class="align-middle" colspan="5">@target.Explanation</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>