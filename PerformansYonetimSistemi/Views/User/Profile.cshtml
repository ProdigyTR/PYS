@{
	ViewData["Title"] = "Profil";

}
<div class="card mb-3">
	<div class="card-header position-relative mb-7" style="min-height:15vh">

		<!--/.bg-holder-->

		<div class="avatar avatar-5xl avatar-profile"><img class="rounded-circle img-thumbnail shadow-sm" src="..@ViewBag.url" width="200" alt=""></div>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-3 pb-3">
				<form asp-action="ImageUpload" method="post" enctype="multipart/form-data">
					<input class="d-none" type="text" autocomplete="off" id="username" name="username" value="@ViewBag.username" />
					<label class="form-label" for="image"></label>
					<input class="form-control btn btn-warning" type="file" id="image" name="image" />
					<button class="btn btn-info mt-3" type="submit">Profil Fotoğrafını Güncelle</button>
				</form>
			</div>
			<div class="col-md-12">
				<h4 class="mb-1">
					@ViewBag.user
				</h4>
				<h5 class="fs-0 fw-normal">@ViewBag.department</h5>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<form asp-action="Profile" method="post">
					<div class="mb-3">
						<input class="d-none" type="text" name="companyId" value="@ViewBag.companyId"></input>
						<label class="form-label" for="username">Kullanıcı Adı</label>
						<input class="form-control" type="text" autocomplete="off" id="username" name="username" value="@ViewBag.username" />
					</div>
					<div class="mb-3">
						<label class="form-label" for="firstName">Adı</label>
						<input class="form-control" type="text" autocomplete="off" id="firstName" name="firstName" value="@ViewBag.firstName" />
					</div>
					<div class="mb-3">
						<label class="form-label" for="lastName">Soyadı</label>
						<input class="form-control" type="text" autocomplete="off" id="lastName" name="lastName" value="@ViewBag.lastName" />
					</div>
					<div class="mb-3">
						<label class="form-label" for="department">Ünvan</label>
						<input class="form-control" type="text" autocomplete="off" id="department" name="department" value="@ViewBag.department" />
					</div>
					<div class="mb-3">
						<label class="form-label" for="email">e-Mail</label>
						<input class="form-control" type="email" autocomplete="off" id="email" name="email" value="@ViewBag.email" />
					</div>
					<div class="row gx-2">
						<div class="mb-3 col-sm-6">
							<label class="form-label" for="password">Şifre</label>
							<input class="form-control" type="password" autocomplete="off" id="password" name="password" />
						</div>
						<div class="mb-3 col-sm-6">
							<label class="form-label" for="confirmPassword">Şifre Doğrulama</label>
							<input class="form-control" type="password" autocomplete="off" id="confirmPassword" name="confirmPassword" />
						</div>
						<p class="text-warning">@TempData["errorPassword"]</p>
					</div>
					<div class="mb-3">
						<button class="btn btn-success d-block w-100 mt-3" type="submit" name="submit">Kaydet</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>