@{
    ViewData["Title"] = "Anasayfa";
}
<div class="row g-3 mb-4">

    <!-- Genel Skor -->
    <div class="col-md-6 col-xl-3">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="text-700">Genel Performans</h6>
                <div class="d-flex align-items-center">
                    <h2 class="mb-0 text-primary">74.8</h2>
                    <span class="badge badge-soft-success ms-2">
                        <i class="fas fa-arrow-up"></i> 3.2%
                    </span>
                </div>
                <small class="text-muted">Son 30 gün</small>
            </div>
        </div>
    </div>

    <!-- Hedef Gerçekleşme -->
    <div class="col-md-6 col-xl-3">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="text-700">Hedef Gerçekleşme</h6>
                <h2 class="text-success">82%</h2>
                <div class="progress mt-2" style="height:5px;">
                    <div class="progress-bar bg-success" style="width:82%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Riskli Çalışan -->
    <div class="col-md-6 col-xl-3">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="text-700">Riskli Performans</h6>
                <h2 class="text-danger">6</h2>
                <small class="text-muted">70 puan altı</small>
            </div>
        </div>
    </div>

    <!-- Yaklaşan Değerlendirme -->
    <div class="col-md-6 col-xl-3">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="text-700">Yaklaşan Değerlendirme</h6>
                <h2>12</h2>
                <small class="text-muted">7 gün içinde</small>
            </div>
        </div>
    </div>

</div>
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Genel Performans Trendi</h5>
    </div>
    <div class="card-body">
        <canvas id="performanceTrendChart"></canvas>
    </div>
</div>
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Departman Performans Analizi</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <div class="d-flex justify-content-between">
                <span>Muhasebe</span>
                <span>78</span>
            </div>
            <div class="progress" style="height:6px;">
                <div class="progress-bar bg-primary" style="width:78%"></div>
            </div>
        </div>

        <div class="mb-3">
            <div class="d-flex justify-content-between">
                <span>İnsan Kaynakları</span>
                <span>69</span>
            </div>
            <div class="progress" style="height:6px;">
                <div class="progress-bar bg-danger" style="width:69%"></div>
            </div>
        </div>

    </div>
</div>
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Aksiyon Gerektiren Çalışanlar</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-sm table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Departman</th>
                        <th>Skor</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Ahmet Yılmaz</td>
                        <td>Satış</td>
                        <td class="text-danger">62</td>
                        <td><span class="badge badge-soft-danger">Kritik</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('performanceTrendChart');

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Ocak','Şubat','Mart','Nisan','Mayıs','Haziran'],
            datasets: [{
                label: 'Ortalama Skor',
                data: [68, 70, 72, 74, 73, 74.8],
                borderColor: '#2c7be5',
                backgroundColor: 'rgba(44,123,229,0.1)',
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false }
            }
        }
    });
</script>