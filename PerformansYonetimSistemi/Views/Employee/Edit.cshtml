@model PerformansYonetimSistemi.ViewModels.MainViewModel
@{
    ViewData["title"] = "Çalışan Düzenle";
}
@foreach(var item in Model.Employees)
{
    <form asp-controller="Employee" asp-action="Edit" method="post" class="card">
        <div class="card-body">
            <div class="col-sm-12 d-flex justify-content-between">
                <div class="col-sm-5">
                    <label class="form-label form-label-lg">T.C. Kimlik No</label>
                    <input class="form-control form-control-lg" type="text" name="TC" value="@item.TC" required="">
                </div>
                <div class="col-sm-5 d-flex justify-content-between">
                    <div class="col-sm-5">
                        <label class="form-label form-label-lg">Adı</label>
                        <input class="form-control form-control-lg w-100" type="text" name="Name" value="@item.Name" required="">
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label form-label-lg">Soyad</label>
                        <input class="form-control form-control-lg" type="text" name="LastName" value="@item.LastName" required="">
                    </div>
                </div>
            </div>
            <div class="col-sm-12 d-flex justify-content-between">
                <div class="col-sm-5">
                    <label class="form-label form-label-lg">Görev/Ünvan</label>
                    <select class="form-select" name="Position" required="">
                        <option value="@item.Position">@Model.Positions.Where(w=>w.Code==item.Position).Select(s=>s.Name).FirstOrDefault()</option>
                        @foreach (var pos in Model.Positions.Where(w=>w.Code!=item.Position))
                        {
                            <option value="@pos.Code">@pos.Name</option>
                        }
                    </select>
                </div>
                <div class="col-sm-5">
                    <label class="form-label form-label-lg">Departman</label>
                    <select class="form-select" name="Department" required="">
                        <option value="@item.Department">@Model.Departments.Where(w=>w.Code==item.Department).Select(s=>s.Name).FirstOrDefault()</option>
                        @foreach (var dep in Model.Departments.Where(w=>w.Code!=item.Department))
                        {
                            <option value="@dep.Code">@dep.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-sm-12 d-flex justify-content-between">
                <div class="col-sm-5">
                    <label class="form-label form-label-lg">İşe Giriş Tarihi</label>
                    <input class="form-control" type="date" name="DateOfRecruitment" required="">
                </div>
                <div class="col-sm-5">
                    <label class="form-label form-label-lg">Mail</label>
                    <input class="form-control" type="email" name="Mail" required="">
                </div>
            </div>
            <div class="col-sm-12 d-flex justify-content-between">
                <div class="col-sm-5">
                    <label class="form-label form-label-lg">Toplam İş Tecrübesi (Yıl)</label>
                    <input class="form-control" type="number" name="TotalWorkExperience" required="">
                </div>
                <div class="col-sm-5">
                    <label class="form-label form-label-lg">Yöneticisi</label>
                    <select class="form-select" name="Responsible" required="">
                        <option value="@item.Responsible">@Model.Employees.Where(w=>w.TC==item.TC).Select(s=>s.Name+" "+s.LastName).FirstOrDefault()</option>
                        @foreach (var res in Model.Employees.Where(w=>w.TC!=item.TC))
                        {
                            <option value="@res.TC">@res.Name @res.LastName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-sm-12 d-flex justify-content-between mt-3">
                <div class="col-sm-5">
                    <label class="form-label form-label-lg">Müdürü mü?</label>
                    @if(item.IsManager){

                        <input class="form-check-input" type="checkbox" name="IsManager" checked>
                    }
                    else
                    {

                        <input class="form-check-input" type="checkbox" name="IsManager">
                    }
                </div>
                <div class="col-sm-5">
                    <label class="form-label form-label-lg">Genel Müdürü mü?</label>
                    @if (item.IsGM)
                    {

                        <input class="form-check-input" type="checkbox" name="IsGM" checked>
                    }
                    else
                    {
                        <input class="form-check-input" type="checkbox" name="IsGM">
                    }
                </div>
            </div>
            <div class="col-sm-12">
                <button class="btn btn-lg btn-outline-success w-100" type="submit">Kaydet</button>
            </div>
        </div>
    </form>    
}