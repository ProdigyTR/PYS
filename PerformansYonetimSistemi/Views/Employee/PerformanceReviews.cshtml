@using PerformansYonetimSistemi.Helper;
@model PerformansYonetimSistemi.ViewModels.MainViewModel
@{
    ViewData["title"] = "Çalışan Karnesi";
    Functions functions = new Functions();
}
@foreach (var ek in Model.EmployeeKpis)
{
    @foreach (var item in Model.Employees)
    {
        <div class="card mb-1">
            <div class="card-body">
                <div class="col-sm-12 d-flex">
                    <div class="col-sm-3">
                        <img class="rounded-circle img-thumbnail shadow-sm" src="/img/employee/@(item.TC).jpg" width="200">
                        <div class="col-sm-12">
                            <h4 class="mb-1">@item.Name @item.LastName</h4>
                            <h5 class="fs-9 fw-normal">@Model.Positions.Where(w => w.Code == item.Position).Select(s => s.Name).FirstOrDefault()</h5>
                            <p class="text-500">@Model.Departments.Where(w => w.Code == item.Department).Select(s => s.Name).FirstOrDefault()</p>
                            <p><span class="badge bg-warning">@ek.StartDate.ToShortDateString() - @ek.EndDate.ToShortDateString()</span></p>

                        </div>
                    </div>
                    <div class="col-sm-9 mb-1">
                        <table class="table table-sm table-bordered table-striped mb-1">
                            <thead class="bg-soft-warning">
                                <tr>
                                    <th colspan="2">Hedefler</th>
                                    <th class="text-center"><span class="badge badge-soft-success">Hedeflerin Toplam Oranı</span></th>
                                    <th class="text-center"><span class="badge badge-soft-success">% @Model.PerformanceCards.Where(w=>w.KpiId==ek.Id).Sum(s=>s.Ratio)</span></th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ksc in Model.PerformanceCards.Where(w => w.KpiId == ek.Id).OrderBy(o => o.Id))
                                {
                                    <tr>
                                        <td class="text-900">
                                            @Model.KPIs.Where(w => w.Code == Model.Targets.Where(w => w.Id ==ksc.TargetId).Select(s => s.KpiCode).FirstOrDefault()).Select(s=>s.Name).FirstOrDefault()
                                        </td>
                                        <td class="text-700">
                                            @Model.Targets.Where(w => w.Id == ksc.TargetId).Select(s => s.Explanation).FirstOrDefault()
                                        </td>
                                        <td class="text-center">
                                            <span class="badge rounded-pill badge-soft-primary pt-2 pointer">%@(ksc.Ratio)</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge rounded-pill badge-soft-warning pt-2 pointer">@ksc.Point</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <table class="table table-sm table-bordered table-striped">
                            <thead class="bg-soft-success">
                                <tr>
                                    <th colspan="2">Yetkinlikler</th>
                                    <th class="text-center"><span class="badge badge-soft-warning">Yetkinliklerin Toplam Oranı</span></th>
                                    <th class="text-center"><span class="badge badge-soft-warning">%@Model.FormDetails.Where(w=>w.TextLevel==0).Sum(s=>s.Weight)</span></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ntff in Model.NeedToFillForms.Where(w => w.TextLevel == 0))
                                {
                                    <tr>
                                        <td class="text-900">
                                            @ntff.Explanation
                                        </td>
                                        <td class="text-700">                                            
                                        </td>
                                        <td class="text-center">
                                            <span class="badge rounded-pill badge-soft-warning pt-2 pointer">%@Model.FormDetails.Where(w=>w.Id==ntff.DetailId).Select(s=>s.Weight).FirstOrDefault()</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge rounded-pill badge-soft-danger pt-2 pointer">@(functions.CalculatePoint(ntff.DetailId, Model.FormDetails, Model.NeedToFillForms))</span>
                                        </td>
                                    </tr>
                                    @foreach (var tlvl1 in Model.NeedToFillForms.Where(w => w.TextLevel == 1 && Convert.ToInt32(w.Title)==ntff.DetailId))
                                    {
                                        <tr>
                                            <td class="text-900">
                                                
                                            </td>
                                            <td class="text-700">
                                                @tlvl1.Explanation
                                            </td>
                                            <td class="text-center">
                                                <span class="badge rounded-pill badge-soft-primary pt-2 pointer">%@Model.FormDetails.Where(w=>w.Id==tlvl1.DetailId).Select(s=>s.Weight).FirstOrDefault()</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge rounded-pill badge-soft-success pt-2 pointer">@(functions.CalculatePoint(tlvl1.DetailId, Model.FormDetails, Model.NeedToFillForms))</span>
                                            </td>
                                        </tr>
                                    }
                                    
                                }                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
}